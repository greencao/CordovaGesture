    <LinearLayout
        android:layout_width="112dp"
        android:layout_height="41dp"
        android:gravity="center"
        android:background="#449AF7" >

        <TextView
            android:id="@+id/text"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_marginBottom="0.5dp"
